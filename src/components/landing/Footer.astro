---
/**
 * Footer Component
 * Footer with legal links, contact information, and copyright notice
 * Following Public Layout pattern (ui-plan.md Section 4.1)
 */
import type { FooterLink } from "./types";

const legalLinks: FooterLink[] = [
  { label: "Privacy Policy", href: "/privacy" },
  { label: "Terms of Service", href: "/terms" },
];

const currentYear = new Date().getFullYear();
---

<footer class="border-t bg-background" role="contentinfo">
  <div class="container px-4 py-8 sm:px-6 md:py-12 lg:px-8">
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4">
      <div>
        <p class="text-sm font-semibold">Development Refresher Training</p>
        <p class="mt-2 text-sm text-muted-foreground leading-relaxed">AI-powered learning for returning developers</p>
      </div>

      <nav aria-label="Legal links">
        <p class="text-sm font-semibold">Legal</p>
        <ul class="mt-2 space-y-2" role="list">
          {
            legalLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="inline-flex items-center text-sm text-muted-foreground hover:underline focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 rounded-sm min-h-[44px] py-2"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </nav>

      <div>
        <p class="text-sm font-semibold">Contact</p>
        <a
          href="mailto:support@devrefresh.app"
          class="mt-2 inline-flex items-center text-sm text-muted-foreground hover:underline focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 rounded-sm min-h-[44px] py-2"
          aria-label="Email support at support@devrefresh.app"
        >
          support@devrefresh.app
        </a>
      </div>
    </div>

    <div class="mt-8 border-t pt-8 text-center text-sm text-muted-foreground">
      Â© {currentYear} Development Refresher Training. All rights reserved.
    </div>
  </div>
</footer>
