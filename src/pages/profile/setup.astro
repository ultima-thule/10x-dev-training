---
/**
 * Profile Setup Page
 * Initial profile configuration for new users
 * Accessed after successful registration (auth-spec.md Section 2.1)
 *
 * @implements US-004: Initial User Profile Setup
 *
 * Note: This page is protected but exempted from profile completion check
 * Users are redirected here after signup or when profile is incomplete
 */
import Layout from "@/layouts/Layout.astro";
import { ProfileSetupForm } from "@/components/auth/ProfileSetupForm";

// This page is protected by middleware
// If user is not authenticated, they will be redirected to /login
const { user } = Astro.locals;

// Safety check (should never happen due to middleware)
if (!user) {
  return Astro.redirect("/login");
}
---

<Layout
  title="Complete Your Profile - Development Refresher Training"
  description="Tell us about your background to personalize your learning experience"
  showAuthHeader={true}
>
  <main id="main-content" role="main" class="min-h-[calc(100vh-4rem)]">
    <section
      class="relative overflow-hidden bg-gradient-to-b from-background via-background to-background/90 py-16 sm:py-20 lg:py-24"
    >
      <div class="absolute inset-0 -z-10">
        <div
          class="pointer-events-none absolute left-1/2 top-0 size-[480px] -translate-x-1/2 rounded-full bg-primary/20 blur-[160px] sm:size-[640px]"
          aria-hidden="true"
        >
        </div>
      </div>

      <div class="container mx-auto px-4">
        <div class="mx-auto max-w-md">
          <div class="space-y-6">
            <div class="space-y-2 text-center">
              <h1 class="text-3xl font-semibold tracking-tight text-foreground sm:text-4xl">Complete your profile</h1>
              <p class="text-base text-muted-foreground sm:text-lg">Help us personalize your learning experience</p>
            </div>

            <div class="rounded-lg border border-border/60 bg-card p-6 shadow-lg sm:p-8">
              <div class="mb-6 space-y-4">
                <div class="flex items-start gap-3">
                  <span
                    aria-hidden="true"
                    class="mt-1 inline-flex size-5 items-center justify-center rounded-full bg-primary/10 text-primary shrink-0"
                  >
                    ✓
                  </span>
                  <p class="text-sm text-muted-foreground">We'll tailor content based on your experience level</p>
                </div>
                <div class="flex items-start gap-3">
                  <span
                    aria-hidden="true"
                    class="mt-1 inline-flex size-5 items-center justify-center rounded-full bg-primary/10 text-primary shrink-0"
                  >
                    ✓
                  </span>
                  <p class="text-sm text-muted-foreground">Your learning path will adjust to your break duration</p>
                </div>
                <div class="flex items-start gap-3">
                  <span
                    aria-hidden="true"
                    class="mt-1 inline-flex size-5 items-center justify-center rounded-full bg-primary/10 text-primary shrink-0"
                  >
                    ✓
                  </span>
                  <p class="text-sm text-muted-foreground">Get AI-powered recommendations specific to your needs</p>
                </div>
              </div>

              <ProfileSetupForm client:load />
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
