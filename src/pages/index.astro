---
/**
 * Landing Page
 * Public-facing entry point with context-aware header
 * Shows different actions based on authentication state
 * Implements Server-Side Rendering and Progressive Enhancement (ui-plan.md Section 1)
 */
import Layout from "@/layouts/Layout.astro";
import PublicHeader from "@/components/landing/PublicHeader.astro";
import HeroSection from "@/components/landing/HeroSection.astro";
import BenefitList from "@/components/landing/BenefitList.astro";
import Footer from "@/components/landing/Footer.astro";
import { getLandingContent } from "@/types/ui/landing";

const landingContent = getLandingContent();

// Get user state from middleware
const { user } = Astro.locals;
---

<Layout
  title="Development Refresher Training - AI-Powered Learning for Returning Developers"
  description="Refresh your coding skills with personalized AI-generated learning paths, progress tracking, and LeetCode integration."
>
  <PublicHeader header={landingContent.header} user={user} />

  <main id="main-content" role="main">
    <HeroSection content={landingContent.hero} />
    <BenefitList items={landingContent.benefits} />
  </main>

  <Footer />
</Layout>
